2.
SELECT PUBLIKACIJA.NAZIV,AUTOR.IME_I_PREZIME AS IME
FROM PUBLIKACIJA,AUTOR
WHERE PUBLIKACIJA.GOD_PUBLIKOVANJA < 2000 AND PUBLIKACIJA.CENA <1000
ORDER BY PUBLIKACIJA.BROJ_STR DESC;

3.
SELECT AUTOR.IME_I_PREZIME,PUBLIKACIJA.NAZIV, COUNT(PUBLIKACIJA_ID)
FROM AUTOR INNER JOIN PUBLIKACIJA ON AUTOR.ID=PUBLIKACIJA.ID INNER JOIN POGLAVLJE ON POGLAVLJE.PUBLIKACIJA_ID=PUBLIKACIJA_ID
WHERE  AUTOR.POL='Z' AND 
GROUP BY AUTOR.IME_I_PREZIME,PUBLIKACIJA.NAZIV
HAVING COUNT(PUBLIKACIJA_ID)=(SELECT COUNT(PUBLIKACIJA_ID) 
		FROM AUTOR INNER JOIN PUBLIKACIJA ON AUTOR.ID=PUBLIKACIJA.ID INNER JOIN POGLAVLJE ON POGLAVLJE.PUBLIKACIJA_ID=PUBLIKACIJA_ID
		GROUP BY PUBLIKACIJA_ID)
