CREATE TABLE POGLAVLJE
(
ID NUMBER(10,0) PRIMARY KEY,
ROD_POGL_ID  NUMBER(10),
PUBLIKACIJA_ID NUMBER(10),
BROJ_RECI NUMBER(20,0),
BROJ_SLIKA NUMBER(10,0),
BROJ_TABELA NUMBER(10,0),
CONSTRAINT ROD_POGL_ID_FK FOREIGN KEY(ROD_POGL_ID) REFERENCES POGLAVLJE(ID),
CONSTRAINT PUBLIKACIJA_ID_FK FOREIGN KEY(PUBLIKACIJA_ID) REFERENCES PUBLIKACIJA(ID)
);

CREATE TABLE AUTOR
(
  ID NUMBER(10) PRIMARY KEY,
  IME_I_PREZIME NVARCHAR2(100) NOT NULL,
  POL CHAR(1) CHECK (POL IN ('M', 'Z')),
  GOD_RODJ NUMBER(4),
  ADRESA NVARCHAR2(200)
);

CREATE TABLE PUBLIKACIJA
(
	ID NUMBER(10) PRIMARY KEY, 
	AUTOR_ID NUMBER(10), 
	NAZIV NVARCHAR2(100) NOT NULL, 
	GOD_PUBLIKOVANJA NUMBER(4), 
	BROJ_STR NUMBER (5),
	CENA NUMBER (10,2),
	CONSTRAINT AUTOR_FK FOREIGN KEY(AUTOR_ID) REFERENCES AUTOR(ID)
 );
  
